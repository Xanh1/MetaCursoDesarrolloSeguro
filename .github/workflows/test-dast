name: Reusable - DAST

on:
  workflow_call:
    inputs:
      image-tag:
        required: true
        type: string

jobs:
  dast:
    runs-on: ubuntu-latest

    steps:
      - name: Run container
        run: |
          docker run -d -p 8080:8080 ${{ inputs.image-tag }}
          sleep 20

      - name: OWASP ZAP Scan
        uses: zaproxy/action-baseline@v0.14.0
        with:
          target: http://localhost:8080

      - name: Stop container
        run: docker ps -q | xargs docker stop
